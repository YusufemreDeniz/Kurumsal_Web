    <script>
        $(document).ready(function () {
            const apiKey = 'd46b58ea9ac1f4e1201a9e6d62bd40ea'; // OpenWeatherMap API key'inizi buraya ekleyin
            const city = 'Van'; // Hava durumunu göstermek istediğiniz şehir adı
            const apiUrl = `https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=${apiKey}&units=metric&lang=tr`;

            $.get(apiUrl, function (data) {
                const weatherInfo = `
                        <p>Şehir: ${data.name}</p>
                        <p>Sıcaklık: ${data.main.temp}°C</p>
                        <p>Durum: ${data.weather[0].description}</p>
                        <p>Nem: ${data.main.humidity}%</p>
                    `;
                $('#weather-info').html(weatherInfo);
            }).fail(function () {
                $('#weather-info').html('<p>Hava durumu bilgisi alınamadı.</p>');
            });
        });
    </script>

