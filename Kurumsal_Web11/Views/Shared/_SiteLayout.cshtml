<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kurumsal Web Sitemiz</title>
    <meta name="description" content="" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.7.2/flexslider.min.css" />
    <!-- SweetAlert2 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- SweetAlert2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


    <!-- Favicons -->
    <link href="~/Content/SiteLayout/assets/img/favicon.png" rel="icon">
    <link href="~/Content/SiteLayout/assets/img/apple-touch-icon.png" rel="apple-touch-icon">
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/Content/SiteLayout/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/SiteLayout/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/Content/SiteLayout/assets/vendor/aos/aos.css" rel="stylesheet">
    <link href="~/Content/SiteLayout/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
    <link href="~/Content/SiteLayout/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
    <!-- Main CSS File -->
    <link href="~/Content/SiteLayout/assets/css/main.css" rel="stylesheet">
    <!-- =======================================================
    * Template Name: Moderna
    * Template URL: https://bootstrapmade.com/free-bootstrap-template-corporate-moderna/
    * Updated: Aug 07 2024 with Bootstrap v5.3.3
    * Author: BootstrapMade.com
    * License: https://bootstrapmade.com/license/
    ======================================================== -->

</head>
<body>

    <header id="header" style="background-color:black" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">
            <a href="index.html" class="logo d-flex align-items-center">
                <!-- Uncomment the line below if you also wish to use an image logo -->
                <!-- <img src="assets/img/logo.png" alt=""> -->
                <h1 class="sitename">Kurumsal Web</h1>
            </a>
            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="/Home/Index/" class="active">Ana Sayfa</a></li>
                    <li><a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                    <li><a href="/Home/Hizmetlerimiz/">Hizmetlerimiz</a></li>
                    <li><a href="/Home/Blog/">Blog</a></li>
                    <li><a href="/Home/Iletisim/">İletişim</a></li>
                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>
        </div>
    </header>

    @RenderBody()

    <footer id="footer" class="footer dark-background">
        <div class="footer-newsletter">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-lg-6">
                        <h4>KURUMSAL WEB SİTE PROJESİ</h4>

                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <h5 class="widgetheading">İLETİŞİM</h5>
                    <address>
                        <strong>🏠<br />@ViewBag.Iletisim.Adres</strong><br />
                    </address>
                    <p>
                        <i class="bi-phone"></i><br />@ViewBag.Iletisim.Telefon<br /><br />
                        <i class="bi bi-whatsapp"></i><br />@ViewBag.Iletisim.Whatsapp<br /><br />
                        <i class="bi-envelope"></i><br />@ViewBag.Iletisim.Email
                    </p>
                </div>
                <div class="col-lg-2 col-md-3 footer-links">
                    <div class="widget">
                        <h5 class="widgetheading">MENÜ</h5>
                        <ul>
                            <li><i class="bi bi-chevron-right"></i> <a href="/Home/Index/">Ana Sayfa</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="/Home/Hakkimizda/">Hakkımızda</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="/Home/Blog/">Blog</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="/Home/Hizmetlerimiz/">Hizmetler</a></li>
                            <li><i class="bi bi-chevron-right"></i> <a href="/Home/Iletisim/">İletişim</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">SON BLOG YAZILARI</h5>
                        <ul class="link-list">
                            @foreach (var item in ViewBag.Blog)
                            {
                                <li><a href="/Home/BlogDetay/@item.BlogId">@item.Baslik</a></li>
                            }
                        </ul>
                    </div>
                    <style>
                        .link-list {
                            list-style: none; /* Noktaları kaldır */
                            padding-left: 0; /* Varsayılan padding'i sıfırla */
                        }

                            .link-list li::before {
                                content: "👉"; /* Sağa doğru ok ikonu */
                                margin-right: 10px; /* Ok ile metin arasına boşluk ekle */
                                color: #000; /* Ok rengi (isteğe bağlı) */
                            }
                    </style>
                </div>
                <div class="col-lg-3">
                    <div class="widget">
                        <h5 class="widgetheading">Hizmetlerimiz</h5>
                        <div id="flickr_badge">
                            @foreach (var item in ViewBag.Hizmetler)
                            {
                                <img src="@item.ResimURL" width="110" height="65">
                            }

                        </div>
                        <style>
                            #flickr_badge {
                                display: flex;
                                flex-wrap: wrap;
                                gap: 10px;
                            }

                                #flickr_badge img {
                                    margin-right: 10px;
                                    margin-bottom: 10px;
                                }
                        </style>
                    </div>
                </div>
            </div>
        </div>
        <div class="container copyright text-center mt-4">
            @DateTime.Now.ToUniversalTime()<p>© <span>Tüm Hakları Gizlidir</span></p>
            <div class="credits">
                 <a href="https://kurumsalweb.com/">KurumsalWeb</a> Tarafından Tasarlandı. 
            </div>
        </div>

        <div class="col-lg-6">
            <ul class="social-links">
                <li><a href="www.facebook.com/@ViewBag.Iletisim.Facebook" data-placement="top" title="Facebook"><i class="bi-facebook"></i></a></li>
                <li><a href="www.x.com/@ViewBag.Iletisim.Twitter" data-placement="top" title="Twitter"><i class="bi-twitter-x"></i></a></li>
                <li><a href="www.instagram.com/@ViewBag.Iletisim.Instagram" data-placement="top" title="Instagram"><i class="bi-instagram"></i></a></li>
            </ul>
            <style>
                /* Footer içindeki social-links div'ini sağ alt köşeye taşıma */
                footer {
                    position: relative; /* Footer'ı relative yaparak içindeki absolute elementleri konumlandırabiliriz */
                }

                .social-links {
                    position: absolute; /* Sağ alt köşeye taşımak için */
                    bottom: 120px; /* Alt boşluk */
                    right: 200px; /* Sağ boşluk */
                    list-style: none; /* Noktaları kaldır */
                    padding: 0; /* Varsayılan padding'i sıfırla */
                    margin: 0; /* Varsayılan margin'i sıfırla */
                    display: flex; /* Yan yana sırala */
                    gap: 10px; /* Elemanlar arası boşluk */
                }

                    .social-links li {
                        display: inline-block; /* Yan yana sırala */
                        margin-right: 10px; /* Elemanlar arası boşluk (flexbox kullanmıyorsanız) */
                    }

                        .social-links li:last-child {
                            margin-right: 0; /* Son elemanın sağ boşluğunu sıfırla */
                        }

                    .social-links a {
                        color: #fff; /* Link rengi (isteğe bağlı) */
                        font-size: 20px; /* İkon boyutu (isteğe bağlı) */
                        text-decoration: none; /* Alt çizgiyi kaldır */
                    }
            </style>
        </div>
    </footer>

    <!-- Scroll Top -->
    <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>
    <!-- Preloader -->
    <div id="preloader"></div>
    <!-- Vendor JS Files -->
    <script src="~/Content/SiteLayout/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/php-email-form/validate.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/aos/aos.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/glightbox/js/glightbox.min.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/purecounter/purecounter_vanilla.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/swiper/swiper-bundle.min.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/waypoints/noframework.waypoints.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="~/Content/SiteLayout/assets/vendor/isotope-layout/isotope.pkgd.min.js"></script>
    <!-- Main JS File -->
    <script src="~/Content/SiteLayout/assets/js/main.js"></script>

    <!-- Flexslider JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/flexslider/2.7.2/jquery.flexslider-min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('.flexslider').flexslider({
                animation: "slide"
            });
        });
    </script>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>