<body>

    <!-- ======= Header ======= -->
    <header id="header" class="header fixed-top d-flex align-items-center">


        <div class="d-flex align-items-center justify-content-between">
            <a href="/yonetimpaneli/" class="logo d-flex align-items-center">
                <img src="~/Content/AdminLayout/assets/img/logo.png" alt="">
                <span class="d-none d-lg-block">Kurumsal Web Admin</span>
            </a>
            <i class="bi bi-list toggle-sidebar-btn"></i>
        </div><!-- End Logo -->

        <div class="search-bar">
            <form class="search-form d-flex align-items-center" method="POST" action="#">
                <input type="text" name="query" placeholder="Search" title="Enter search keyword">
                <button type="submit" title="Search"><i class="bi bi-search"></i></button>
            </form>
        </div><!-- End Search Bar -->

        <nav class="header-nav ms-auto">
            <ul class="d-flex align-items-center">

                <li class="nav-item d-block d-lg-none">
                    <a class="nav-link nav-icon search-bar-toggle " href="#">
                        <i class="bi bi-search"></i>
                    </a>
                </li><!-- End Search Icon-->

                <li class="nav-item dropdown">

                    <a class="nav-link nav-icon" href="#" data-bs-toggle="dropdown">
                        <i class="bi bi-bell"></i>
                        <span class="badge bg-primary badge-number">@ViewBag.YorumOnay</span>
                    </a><!-- End Notification Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow notifications">
                        <li class="dropdown-header">
                            Bekleyen @ViewBag.YorumOnay Yorum Bulunmaktadır.
                        </li>
                        <li>
                            <a href="/Yorum/Index/">Yorumları Onayla</a>
                        </li>
                    </ul><!-- End Notification Dropdown Items -->

                </li><!-- End Notification Nav -->



                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">
                        <img src="~/Content/AdminLayout/assets/img/profile-img.jpg" alt="Profile" class="rounded-circle">
                        <span class="username d-none d-md-block dropdown-toggle ps-2">@Session["eposta"]</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h6>Admin</h6>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/Admin/Adminler/">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Adminler</span>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="/Admin/Logout/">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Çıkış Yap</span>
                            </a>
                        </li>


                    </ul><!-- End Profile Dropdown Items -->
                </li><!-- End Profile Nav -->

            </ul>
        </nav><!-- End Icons Navigation -->

    </header><!-- End Header -->
    <!-- ======= Sidebar ======= -->
    <aside id="sidebar" class="sidebar">

        <ul class="sidebar-nav" id="sidebar-nav">

            <li class="nav-item">
                <a class="nav-link " href="/yonetimpaneli/">
                    <i class="bi bi-grid"></i>
                    <span>Admin Özet</span>
                </a>
            </li><!-- End Dashboard Nav -->

            <li class="nav-item">
                <a class="nav-link " href="/Kimlik/Index">
                    <i class="bi-alphabet"></i>
                    <span>Site Kimlik</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link " href="/Hakkimizda/Index">
                    <i class="bi-h-square "></i>
                    <span>Hakkımızda</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link " href="/Slider/Index">
                    <i class="bi-slash-square-fill "></i>
                    <span>Slider</span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link " href="/Iletisim/Index">
                    <i class="bi-command "></i>
                    <span>İletişim</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link " href="/Hizmet/Index">
                    <i class="bi-backpack4"></i>
                    <span>Hizmetler</span>
                </a>
            </li>
            <li class="d-flex flex-column bg-light">
                <!-- Yeni Nav Başlığı -->
                <a class="nav-link" data-bs-toggle="collapse" href="#submenu1" role="button" aria-controls="submenu">
                    Blog Kayıtları <i id="icon1" class="bi-chevron-up rotate-icon ms-auto"></i>
                </a>
                <!-- Alt Başlıklar -->
                <div class="collapse" id="submenu1">
                    <a href="/Kategori/Index" class="nav-link ms-3">Kategoriler</a>
                    <a href="/Blog/Index" class="nav-link ms-3">Blog Kayıtları</a>
                    <a href="/Yorum/Index" class="nav-link ms-3">Blog Yorumları</a>
                </div>
                <style>
                    .rotate-icon {
                        transform: rotate(180deg);
                        transition: transform 0.3s ease;
                    }
                </style>
                <script>
                    document.addEventListener('DOMContentLoaded', function () {
                        const submenu = document.getElementById('submenu1');
                        const icon = document.getElementById('icon1');

                        submenu.addEventListener('show.bs.collapse', function () {
                            // Menü açıldığında ikonu aşağı çevir
                            icon.classList.remove('bi-chevron-up');
                            icon.classList.add('bi-chevron-down');
                        });

                        submenu.addEventListener('hide.bs.collapse', function () {
                            // Menü kapandığında ikonu yukarı çevir
                            icon.classList.remove('bi-chevron-down');
                            icon.classList.add('bi-chevron-up');
                        });
                    });
                </script>
            </li>
    </aside><!-- End Sidebar-->
    <main class="main" id="main">
        <section id="main-content">
            <section class="wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="nav-heading"><i class="bi bi-laptop"></i>Admin Paneli</h3>
                        <ol class="breadcrumb">
