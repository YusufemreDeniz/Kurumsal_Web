@model Kurumsal_Web11.Models.Model.Admin

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RememberMe - Admin</title>
</head>

<body>

    <div>
        <p class="alert alert-info">@ViewBag.Uyari</p>
        <form action="/Admin/RememberMe/" method="post">
            <div class="form-horizontal container">

                <hr />

                <div class="form-group">

                    <div class="col-md-10">
                        <input type="email" class="form-control" name="eposta" required placeholder="E posta adresiniz" />

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Şifremi Mail Olarak Gönder" class="btn btn-default" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <a href="/yonetimpaneli/giris/"> Yönetim Paneline Giriş</a>
                    </div>
                </div>
            </div>

        </form>


    </div>




</body>
</html>
