@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    /* Ana container için stil */
.main {
    padding: 2rem;
    background-color: #f8f9fa;
}

/* İstatistik kartları için stiller */
.info-box {
    padding: 1.5rem;
    border-radius: 15px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    cursor: pointer;
}

.info-box:hover {
    transform: translateY(-5px);
}

/* Gradient arka planlar */
.gradient-blue {
    background: linear-gradient(45deg, #4e73df, #224abe);
    color: white;
}

.gradient-purple {
    background: linear-gradient(45deg, #7c4dff, #5e35b1);
    color: white;
}

.gradient-orange {
    background: linear-gradient(45deg, #ff9800, #f57c00);
    color: white;
}

.gradient-green {
    background: linear-gradient(45deg, #4CAF50, #388E3C);
    color: white;
}

/* İkon wrapper */
.icon-wrapper {
    padding-right: 1.5rem;
}

/* Sayı ve başlık stilleri */
.info-content {
    flex-grow: 1;
}

.count {
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 0.5rem;
}

.title {
    font-size: 1rem;
    opacity: 0.9;
}

/* Footer kredileri */
.footer-credits {
    text-align: center;
    margin-top: 2rem;
    padding: 1rem;
    color: #6c757d;
}

/* Animasyon için */
@@keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
}
</style>
<main id="main" class="main">
    <!-- İstatistik kartları için animasyonlu giriş efekti ekledik -->
    <div class="row animate__animated animate__fadeIn">
        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box gradient-blue" onclick="window.location.href='/Blog/Index/'">
                <div class="icon-wrapper">
                    <i class="fas fa-newspaper fa-2x"></i>
                </div>
                <div class="info-content">
                    <div class="count">@ViewBag.BlogSay</div>
                    <div class="title">Blog Yazısı</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box gradient-purple" onclick="window.location.href='/Kategori/Index'">
                <div class="icon-wrapper">
                    <i class="fas fa-th-list fa-2x"></i>
                </div>
                <div class="info-content">
                    <div class="count">@ViewBag.KategoriSay</div>
                    <div class="title">Kategori</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box gradient-orange" onclick="window.location.href='/Hizmet/Index/'">
                <div class="icon-wrapper">
                    <i class="fas fa-hands-helping fa-2x"></i>
                </div>
                <div class="info-content">
                    <div class="count">@ViewBag.HizmetSay</div>
                    <div class="title">Hizmetler</div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
            <div class="info-box gradient-green" onclick="window.location.href='/Yorum/Index/'">
                <div class="icon-wrapper">
                    <i class="fas fa-comments fa-2x"></i>
                </div>
                <div class="info-content">
                    <div class="count">@ViewBag.YorumSay</div>
                    <div class="title">Yorumlar</div>
                </div>
            </div>
        </div>
    </div>

    <div class="footer-credits">
        <p>Designed with <i class="fas fa-heart text-danger"></i> by KurumsalWeb Admin</p>
    </div>
</main>