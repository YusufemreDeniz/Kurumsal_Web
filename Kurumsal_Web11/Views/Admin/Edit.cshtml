@model Kurumsal_Web11.Models.Model.Admin

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 25px;
        background-color: #ffffff;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .form-title {
        color: #2c3e50;
        font-size: 24px;
        text-align: center;
        margin-bottom: 30px;
        padding-bottom: 10px;
        border-bottom: 2px solid #3498db;
    }

    .form-subtitle {
        color: #7f8c8d;
        font-size: 18px;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        display: block;
        margin-bottom: 8px;
        color: #34495e;
        font-weight: 500;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #bdc3c7;
        border-radius: 4px;
        font-size: 14px;
        transition: border-color 0.3s, box-shadow 0.3s;
    }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 5px rgba(52, 152, 219, 0.3);
            outline: none;
        }

    .text-danger {
        color: #e74c3c;
        font-size: 12px;
        margin-top: 5px;
        display: block;
    }

    .btn-submit {
        background-color: #2ecc71;
        color: white;
        padding: 12px 25px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
        font-size: 16px;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #27ae60;
        }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 20px;
        color: #3498db;
        text-decoration: none;
        transition: color 0.3s;
    }

        .back-link:hover {
            color: #2980b9;
            text-decoration: underline;
        }

    /* Responsive tasarım için */
    @@media (max-width: 768px) {
        .form-container {
            margin: 15px;
            padding: 15px;
        }
    }
