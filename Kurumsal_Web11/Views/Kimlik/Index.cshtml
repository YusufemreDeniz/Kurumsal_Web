@model IEnumerable<Kurumsal_Web11.Models.Model.Kimlik>

@{
    ViewBag.Title = "Kimlik Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<main id="main" class="main">



    <div class="page-header">
        <h2 class="page-title">Kimlik Yönetimi</h2>
    </div>

    <p>
        <a href="@Url.Action("Create")" class="btn-add">Yeni Ekle</a>
    </p>

    <table class="content-table table-bordered table-striped table-responsive-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Keywords)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.LogoURL)</th>
                <th>@Html.DisplayNameFor(model => model.Unvan)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Keywords)</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>
                        <img class="img-fluid" src="@item.LogoURL" alt="@item.Title" width="300" height="200" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Unvan)</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.KimlikId }, new { @class = "action-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>