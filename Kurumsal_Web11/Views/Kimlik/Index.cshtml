@model IEnumerable<Kurumsal_Web11.Models.Model.Kimlik>

@{
    ViewBag.Title = "Kimlik Yönetimi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-header {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
        border-left: 5px solid #007bff;
    }

    .page-title {
        color: #343a40;
        margin: 0;
        font-size: 24px;
    }

    .btn-add {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 3px;
        text-decoration: none;
        transition: background-color 0.3s;
        margin-bottom: 20px;
    }

        .btn-add:hover {
            background-color: #0056b3;
        }

    .content-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .content-table th, .content-table td {
            padding: 12px;
            text-align: left;
        }

        .content-table th {
            background-color: #007bff;
            color: white;
        }

        .content-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .content-table tr:hover {
            background-color: #e9ecef;
        }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .action-link {
        color: #28a745;
        text-decoration: none;
        padding: 8px 12px;
        border: 1px solid #28a745;
        border-radius: 3px;
        transition: background-color 0.3s, color 0.3s;
    }

        .action-link:hover {
            background-color: #28a745;
            color: white;
        }
</style>


<main id="main" class="main">



    <div class="page-header">
        <h2 class="page-title">Kimlik Yönetimi</h2>
    </div>

    <table class="content-table table-bordered table-striped table-responsive-sm">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Title)</th>
                <th>@Html.DisplayNameFor(model => model.Keywords)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.LogoURL)</th>
                <th>@Html.DisplayNameFor(model => model.Unvan)</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Title)</td>
                    <td>@Html.DisplayFor(modelItem => item.Keywords)</td>
                    <td>@Html.Raw(item.Description)</td>
                    <td>
                        <img class="img-fluid" src="@item.LogoURL" alt="@item.Title" width="300" height="200" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Unvan)</td>
                    <td>
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.KimlikId }, new { @class = "action-link" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>