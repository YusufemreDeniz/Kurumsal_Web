@model IEnumerable<Kurumsal_Web11.Models.Model.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .main {
        background-color: #f8f9fa;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
        border-bottom: 2px solid #007bff;
        padding-bottom: 10px;
        text-align: center;
    }

    .btn-new-slider {
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        margin-bottom: 20px;
        display: inline-block;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .btn-new-slider:hover {
            background-color: #218838;
            transform: translateY(-2px);
            box-shadow: 0 6px 8px rgba(0,0,0,0.15);
        }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

        .table th {
            background-color: #007bff;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .table td {
            padding: 12px;
            vertical-align: middle;
            border-bottom: 1px solid #e9ecef;
        }

        .table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .table tr:hover {
            background-color: #e9ecef;
            transition: background-color 0.3s ease;
        }

    .slider-image {
        max-width: 150px;
        max-height: 50px;
        border-radius: 5px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

        .slider-image:hover {
            transform: scale(1.1);
        }

    .action-links {
        display: flex;
        gap: 10px;
    }

    .action-link {
        text-decoration: none;
        padding: 5px 10px;
        border-radius: 3px;
        transition: all 0.3s ease;
    }

    .action-link-edit {
        background-color: #ffc107;
        color: white;
    }

    .action-link-details {
        background-color: #17a2b8;
        color: white;
    }

    .action-link-delete {
        background-color: #dc3545;
        color: white;
    }

    .action-link:hover {
        opacity: 0.8;
        transform: translateY(-2px);
    }
</style>

<main id="main" class="main">
    <h2>Slider Listesi</h2>

    <p>
        <a href="/Slider/Create/" class="btn-new-slider">Yeni Slider Ekle</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>Başlık</th>
                <th>Açıklama</th>
                <th>Resim</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Baslik)</td>
                    <td>@Html.DisplayFor(modelItem => item.Acikllama)</td>
                    <td>
                        <img src="@item.ResimURL" class="slider-image" alt="Slider Resmi" />
                    </td>
                    <td class="action-links">
                        @Html.ActionLink("Güncelle", "Edit", new { id = item.SliderId }, new { @class = "action-link action-link-edit" })
                        @Html.ActionLink("Detay", "Details", new { id = item.SliderId }, new { @class = "action-link action-link-details" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.SliderId }, new { @class = "action-link action-link-delete" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>