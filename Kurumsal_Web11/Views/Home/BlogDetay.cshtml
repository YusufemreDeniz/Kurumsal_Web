
@model Kurumsal_Web11.Models.Model.Blog

@{
    ViewBag.Title = "Blog Detay";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}



<style>
    .blog-detail-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .blog-detail-title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 32px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
        text-transform: uppercase;
    }

    .blog-detail-image {
        width: 100%;
        height: auto;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .blog-detail-content {
        font-family: 'Arial', sans-serif;
        font-size: 16px;
        line-height: 1.6;
        color: #555;
    }

    .blog-detail-category {
        font-family: 'Arial', sans-serif;
        font-size: 18px;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 10px;
    }

    .back-to-blog-link {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        font-family: 'Arial', sans-serif;
        font-size: 16px;
        color: white;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .back-to-blog-link:hover {
            background-color: #0056b3;
            text-decoration: none;
            transform: scale(1.05);
            transition: transform 0.3s ease;
        }

    .custom-blog-title {
        font-family: 'Times New Roman', Times, serif;
        font-size: 32px;
        font-weight: bold;
        color: #333;
        background-color: #f8f9fa;
        padding: 15px 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        border: 2px solid #007bff;
        transition: all 0.3s ease;
        display: inline-block;
        text-align: center;
        position: absolute;
        left: 40%;
        width: auto;
        text-transform: uppercase;
    }

    .containera {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        align-items: flex-start;
        margin-top: 0; /* Üst boşluğu kaldırır */
        padding-top: 0; /* Üst padding'i kaldırır */
    }

    .widgett {
        flex: 0 0 25%;
        max-width: 25%;
        padding-left: 20px;
        order: 2;
        margin-left: auto;
        margin-top: 0;
        padding-top: 0;
    }

    .widgetb {
        order: 3; /* Son blog kayıtlarını kategorilerin altına alır */
        margin-top: 20px; /* Kategoriler ile son blog kayıtları arası boşluk */
    }

    .blog-posts {
        flex: 0 0 75%; /* Blog içeriği %75 genişlikte */
        max-width: 75%;
        order: 1; /* Blog içeriğini sola alır */
    }

    .widgett h5.widgetheading {
        margin-top: 0; /* Başlığın üst boşluğunu kaldırır */
        margin-bottom: 10px; /* Başlık ile içerik arası boşluk */
    }

    .widgetheadinga {
        font-family: 'Arial', sans-serif; /* Yazı tipi */
        font-size: 24px; /* Başlık boyutu */
        font-weight: bold; /* Kalın yazı */
        color: #333; /* Başlık rengi */
        margin-bottom: 10px; /* Alt boşluk */
        padding-bottom: 10px; /* Alt çizgi için boşluk */
        position: relative; /* Alt çizgi için gerekli */
        text-transform: uppercase; /* Başlığı büyük harf yapar */
    }

        .widgetheadinga::after {
            content: ''; /* Çizgi için içerik */
            position: absolute; /* Çizgiyi başlığın altına yerleştirir */
            left: 0; /* Sola hizalar */
            bottom: 0; /* Alt çizgi */
            width: 250px; /* Çizgi uzunluğu */
            height: 3px; /* Çizgi kalınlığı */
            background-color: #007bff; /* Çizgi rengi */
            border-radius: 2px; /* Çizgi köşelerini yuvarlar */
        }
    /* Son Blog Kayıtları için Stil */
    .widgett ul.recent {
        list-style: none; /* Liste işaretlerini kaldırır */
        padding: 0; /* Padding'i sıfırlar */
        margin: 0; /* Margin'i sıfırlar */
    }

        .widgett ul.recent li {
            margin-bottom: 15px; /* Kayıtlar arası boşluk */
            display: flex; /* İçeriği yatayda hizalar */
            align-items: center; /* İçeriği dikeyde hizalar */
        }

            .widgett ul.recent li img {
                width: 80px; /* Resim genişliği */
                height: 60px; /* Resim yüksekliği */
                object-fit: cover; /* Resmi kırpmadan sığdırır */
                border-radius: 5px; /* Resim köşelerini yuvarlar */
                margin-right: 10px; /* Resim ile metin arası boşluk */
            }

            .widgett ul.recent li a {
                text-decoration: none; /* Link alt çizgisini kaldırır */
                color: #333; /* Link rengi */
                font-size: 14px; /* Yazı boyutu */
                font-weight: 500; /* Yazı kalınlığı */
                flex-grow: 1; /* Linkin tüm alanı kaplamasını sağlar */
            }

                .widgett ul.recent li a:hover {
                    color: #007bff; /* Hover durumunda link rengi */
                }

    .widgetb h5.widgetheadingb {
        font-family: 'Arial', sans-serif; /* Yazı tipi */
        font-size: 24px; /* Başlık boyutu */
        font-weight: bold; /* Kalın yazı */
        color: #333; /* Başlık rengi */
        margin-bottom: 10px; /* Alt boşluk */
        padding-bottom: 10px; /* Alt çizgi için boşluk */
        position: relative; /* Alt çizgi için gerekli */
        text-transform: uppercase; /* Başlığı büyük harf yapar */
    }

        .widgetb h5.widgetheadingb::after {
            content: ''; /* Çizgi için içerik */
            position: absolute; /* Çizgiyi başlığın altına yerleştirir */
            left: 0; /* Sola hizalar */
            bottom: 0; /* Alt çizgi */
            width: 250px; /* Çizgi uzunluğu */
            height: 3px; /* Çizgi kalınlığı */
            background-color: #007bff; /* Çizgi rengi */
            border-radius: 2px; /* Çizgi köşelerini yuvarlar */
        }

    .widgetb ul.cata {
        list-style: none; /* Liste işaretlerini kaldırır */
        padding: 0; /* Padding'i sıfırlar */
        margin: 0; /* Margin'i sıfırlar */
    }

        .widgetb ul.cata li {
            margin-bottom: 15px; /* Kayıtlar arası boşluk */
            display: flex; /* İçeriği yatayda hizalar */
            align-items: center; /* İçeriği dikeyde hizalar */
        }

            .widgetb ul.cata li h6 {
                margin: 0; /* Başlık için üst ve alt boşlukları sıfırlar */
                font-size: 16px; /* Başlık boyutu */
                font-weight: bold; /* Kalın yazı */
            }

            .widgetb ul.cata li p {
                font-family: "Times New Roman";
                margin: 0; /* Paragraf için üst ve alt boşlukları sıfırlar */
                margin-right: 10px; /* Başlık ile içerik metni arasına boşluk ekler */
                font-size: 14px; /* Yazı boyutunu küçültün */
                color: #666; /* Yazı rengi */
                text-transform: lowercase; /* Metni küçük harfe çevirir */
            }

            .widgetb ul.cata li img {
                width: 60px; /* Resim genişliği küçültüldü */
                height: 45px; /* Resim yüksekliği küçültüldü */
                object-fit: cover; /* Resmi kırpmadan sığdırır */
                border-radius: 5px; /* Resim köşelerini yuvarlar */
                margin-right: 10px; /* Resim ile metin arası boşluk */
            }

    .widget


    b {
        text-transform: uppercase;
    }
    /* Yorum Yap Formu Stilleri */
    .comment-section {
        margin-top: 40px; /* Model.Icerik ile arasına boşluk eklendi */
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .comment-section h3 {
            font-family: 'Arial', sans-serif;
            font-size: 24px;
            font-weight: bold;
            color: #333;
            margin-bottom: 20px;
            text-transform: uppercase;
            border-bottom: 3px solid #007bff;
            display: inline-block;
            padding-bottom: 5px;
        }

        .comment-section input,
        .comment-section textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-family: 'Arial', sans-serif;
            font-size: 14px;
            transition: border-color 0.3s ease;
        }

            .comment-section input:focus,
            .comment-section textarea:focus {
                border-color: #007bff;
                outline: none;
            }

        .comment-section button {
            padding: 12px 30px; /* Buton boyutunu büyüttük */
            font-family: 'Arial', sans-serif;
            font-size: 16px;
            font-weight: bold; /* Yazıyı kalınlaştırdık */
            color: white;
            background-color: #28a745; /* Yeşil arka plan rengi */
            border: none;
            border-radius: 25px; /* Köşeleri yuvarlak yaptık */
            cursor: pointer;
            transition: all 0.3s ease;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Gölge efekti ekledik */
            position: relative;
            overflow: hidden;
        }

            /* Buton Hover Efekti */
            .comment-section button:hover {
                background-color: #218838; /* Daha koyu yeşil hover rengi */
                transform: translateY(-2px); /* Hafif yukarı hareket */
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Gölgeyi artırdık */
            }

            /* Buton Aktif Efekti */
            .comment-section button:active {
                transform: translateY(0); /* Tıklama anında hareketi sıfırla */
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Gölgeyi azalt */
            }

            /* Buton Üzerine Gradient Efekti */
            .comment-section button::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.3));
                transition: left 0.5s ease;
            }

            .comment-section button:hover::before {
                left: 100%; /* Gradient efekti kaydırma */
            }
</style>
<main class="main">
    <!-- Özelleştirilmiş Blog Başlığı -->
    <section id="blog-header" class="blog-header section">
        <div class="containera">
            <h4 class="custom-blog-title">Blog Detay</h4>
        </div>
    </section>

    <!-- Kategoriler ve Son Blog Kayıtları -->
    <div class="containera">
        <!-- Widget Section -->
        <div class="widgett">
            <h5 class="widgetheadinga">Kategoriler</h5>
            @{
                Html.RenderAction("BlogKAtegoriPartial", "Home");
            }
            <div class="widgetb">
                <h5 class="widgetheadingb">Son Blog Kayıtları</h5>

                @{
                    Html.RenderAction("BlogKayitPartial", "Home");
                }
            </div>
        </div>

        <div class="blog-detail-container">
            <h1 class="blog-detail-title">@Model.Baslik</h1>
            <img src="@Model.ResimURL" alt="@Model.Baslik" class="blog-detail-image" />
            <p class="blog-detail-category">Kategori: @Model.Kategori.KategoriAd</p>
            <div class="blog-detail-content">
                @Html.Raw(Model.Icerik)
            </div>
            <div class="row">
                <div class="comment-section">
                    <h3>Yorum Yap</h3>
                    <form>
                        <div>
                            <input type="text" id="adsoyad" placeholder="Adınız Soyadınız" class="form-control" required /><br />
                            <input type="email" id="eposta" placeholder="Mail Adresiniz" class="form-control" required /><br />
                            <textarea typeof="text" id="yorumicerik" class="form-control" placeholder="Yorumunuz"></textarea><br />
                            <button type="submit" class="btn btn-success" id="gonder" value="Yorum Yap">Yorum Yap</button>
                        </div>
                    </form>
                </div>
            </div>
            <a href="/Home/Blog/" class="back-to-blog-link">← Blog Sayfasına Dön</a>
        </div>

    </div>

</main>
<script src="~/Content/SiteLayout/js/jquery.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $("#gonder").click(function () {
            var adisoyadi = $("#adsoyad").val();
            var epostasi = $("#eposta").val();
            var yorumunuz = $("#icerik").val();
            $.ajax({
                url: '/Home/YorumYap/',
                data: {adsoyad:adisoyadi,eposta: epostasi,icerik:yorumunuz,blogid:@Model.BlogId },
                type: 'POST',
                dataType: 'json',
                success: function (data) {
                    alert("Yorumunuz eklendi, kontrol edildikten sonra yayınlanacaktır.");
                }
            });
        });
    })

</script>