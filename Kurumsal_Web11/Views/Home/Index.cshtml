
@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}

<link href="~/Content/homeIndex.css" rel="stylesheet" />


<main class="main">
    <section id="featured">
        <!--Start slider-->
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!--Slider-->
                    @{
                        Html.RenderAction("SliderPartial", "Home");
                    }
                    <!--end slider-->
                </div>
            </div>

            
        </div>
    </section>
    <!-- Featured Services Section -->
    <div class="row">
        <div class="nav-heading-container">
            <h4 class="nav-heading">Hizmetlerimiz</h4>
            <div class="row">
                <section id="projects">
                    <ul id="thumbs" class="portfolio row">
                        @foreach (var item in ViewBag.Hizmetler)
                        {
                            <li class="col-lg-3 design" data-id="id-0" data-type="web">
                                <div class="item-thumbs">
                                    <img src="@item.ResimURL" alt="@item.Baslik" />
                                    <span class="overlay-img-thumb font-icon-plus"
                                          data-image="@item.ResimURL"
                                          data-description="@item.Aciklama">+</span> <!-- "+" butonu -->
                                </div>
                            </li>
                        }
                    </ul>
                </section>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('.item-thumbs').on('click', function () {
                $(this).find('.description').toggle(); // Açıklamayı göster/gizle
            });
        });
        $(document).ready(function () {
            $('.overlay-img-thumb').on('click', function () {
                var imageSrc = $(this).data('image'); // Resim URL'sini al
                var description = $(this).data('description'); // Açıklamayı al

                // SweetAlert2 modalını göster
                Swal.fire({
                    title: 'Resim Detayı',
                    html: '<img src="' + imageSrc + '" alt="" style="width: 100%; border-radius: 5px; margin-bottom: 10px;" />' +
                        '<p>' + description + '</p>',
                    showCloseButton: true,
                    confirmButtonText: 'Tamam',
                });
            });
        });
    </script>

</main>

