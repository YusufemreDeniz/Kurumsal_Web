@{
    ViewBag.Title = "İletişim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<style>
    /* İletişim Sayfası Tasarımı */

    #content {
        padding: 50px 0;
    }

    .map {
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

        .map iframe {
            border-radius: 10px;
        }

    .contactForm {
        margin-top: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .input-group-addon {
        background-color: #337ab7;
        color: #fff;
        border: 1px solid #337ab7;
        border-radius: 5px 0 0 5px;
    }

        .input-group-addon i {
            font-size: 18px;
            margin-right: 10px;
        }

    .form-control {
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .validation {
        color: #f00;
        font-size: 12px;
        margin-top: 5px;
    }

    .btn-primary {
        background-color: #337ab7;
        color: #fff;
        border: 1px solid #337ab7;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 18px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #23527c;
            border: 1px solid #23527c;
        }

    .fa-paper-plane {
        margin-left: 10px;
    }
</style>
<section id="content">
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d4167.834426916554!2d43.371964623664695!3d38.502685831718004!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x401270704c2c890f%3A0xea5ebbfea0b7ac76!2zS3VydHVsdcWfIFBhcmvEsQ!5e0!3m2!1str!2str!4v1736391401821!5m2!1str!2str" width="100%" height="380" frameborder="0" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h4 class="text-center"><strong>Bize Ulaşın</strong></h4>
                <div class="alert alert-info">@ViewBag.Uyari</div>

                <form action="/Iletisim/" method="post" role="form" class="contactForm">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-user"></i></span>
                            <input type="text" name="adsoyad" class="form-control" id="name" placeholder="İsminiz, Soyisminiz" data-rule="minlen:4" data-msg="Lütfen en az 4 karekter giriniz" />
                        </div>
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Mail Adresiniz" data-rule="email" required />
                        </div>
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-pencil"></i></span>
                            <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="minlen:4" required />
                        </div>
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon"><i class="fa fa-comment"></i></span>
                            <textarea class="form-control" name="mesaj" rows="5" data-rule="required" required placeholder="Mesajınız"></textarea>
                        </div>
                        <div class="validation"></div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">Gönder <i class="fa fa-paper-plane"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>