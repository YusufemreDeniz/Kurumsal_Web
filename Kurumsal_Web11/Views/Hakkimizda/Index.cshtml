@model IEnumerable<Kurumsal_Web11.Models.Model.Hakkimizda>

@{
    ViewBag.Title = "Hakkımızda";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .page-header {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
        border-left: 5px solid #007bff;
    }

    .page-title {
        color: #343a40;
        margin: 0;
        font-size: 24px;
    }

    .content-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0 15px;
    }

        .content-table th {
            background-color: #007bff;
            color: white;
            padding: 12px;
            text-align: left;
        }

        .content-table td {
            background-color: #f8f9fa;
            padding: 12px;
        }

        .content-table tr {
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

    .update-button {
        display: inline-block;
        padding: 8px 16px;
        background-color: #28a745;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .update-button:hover {
            background-color: #218838;
            color: white;
            text-decoration: none;
        }

    .truncate {
        max-width: 300px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>


<main id="main" class="main">
    <div class="page-header">
        <h2 class="page-title">Hakkımızda Yönetimi</h2>
    </div>

    <table class="content-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Aciklama)
                </th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="truncate">
                        @Html.Raw(@item.Aciklama)
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.HakkimizdaId })" class="update-button">
                            <i class="fas fa-edit"></i> Güncelle
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</main>