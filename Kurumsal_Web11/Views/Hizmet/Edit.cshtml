@model Kurumsal_Web11.Models.Model.Hizmet

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<main id="main" class="main">
    <style>
        body {
            font-family: 'Helvetica Neue', Arial, sans-serif;
            background-color: #eef2f3;
            margin: 0;
            padding: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
           
        }

        .main {
            background: #ffffff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 800px;
            transition: transform 0.3s;
        }

            .main:hover {
                transform: translateY(-2px);
            }

        h2 {
            color: #333;
            margin-bottom: 30px;
            font-size: 28px;
            font-weight: 600;
            border-bottom: 2px solid #007bff;
            padding-bottom: 10px;
            text-align: center;
        }

        .form {
            margin-top: 20px;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .control-label {
            font-weight: bold;
            color: #555;
            margin-bottom: 10px;
        }

        .form-control {
            width: 100%;
            padding: 15px;
            border: 2px solid #ccc;
            border-radius: 5px;
            transition: border-color 0.3s, box-shadow 0.3s;
            font-size: 16px;
        }

            .form-control:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.5);
            }

        .btn {
            padding: 12px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-right: 10px;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
            box-shadow: 0 2px 5px rgba(0, 123, 255, 0.2);
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-1px);
            }

        .btn-default {
            background-color: #f8f9fa;
            color: #333;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .btn-default a {
                color: inherit;
                text-decoration: none;
            }

            .btn-default:hover {
                background-color: #e2e6ea;
                transform: translateY(-1px);
            }

        .form-group img {
            margin-top: 10px;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s;
        }

            .form-group img:hover {
                transform: scale(1.05);
            }
    </style>

    <h2>Hizmet Düzenle</h2>

    <div class="form">
        <form class="form-validate form-horizontal" id="feedback_form" method="post" action="/Hizmet/Edit/@Model.HizmetID" enctype="multipart/form-data">
            <div class="form-group">
                <label for="cname" class="control-label col-lg-2">Başlık <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input class="form-control" id="Baslik" name="Baslik" minlength="5" type="text" required value="@Model.Baslik" />
                </div>
            </div>
            <div class="form-group">
                <label for="cemail" class="control-label col-lg-2">Açıklama <span class="required">*</span></label>
                <div class="col-lg-10">
                    <textarea name="Aciklama" required class="ckeditor">@Model.Aciklama</textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="cimage" class="control-label col-lg-2">Görsel <span class="required">*</span></label>
                <div class="col-lg-10">
                    <input type="file" class="form-control" id="Gorsel" name="Gorsel" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                    <button type="button" class="btn btn-default"><a href="/Hizmet/Index">İptal</a></button>
                </div>
            </div>
        </form>
    </div>
</main>