@model Kurumsal_Web11.Models.Model.Iletisim

@{
    ViewBag.Title = "İletişim Detayları";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    :root {
        --primary-color: #007bff;
        --secondary-color: #6c757d;
        --background-color: #f4f6f9;
        --card-background: #ffffff;
        --text-color: #333;
    }

    .contact-details-container {
        max-width: 900px;
        margin: 30px auto;
        background-color: var(--card-background);
        border-radius: 12px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
    }

    .contact-header {
        background: linear-gradient(135deg, var(--primary-color), #0056b3);
        color: white;
        padding: 25px;
        text-align: center;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-header h2 {
        margin: 0;
        font-size: 26px;
        display: flex;
        align-items: center;
    }

    .contact-header i {
        margin-right: 15px;
        font-size: 36px;
    }

    .contact-details {
        padding: 30px;
        background-color: var(--background-color);
    }

    .detail-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .detail-item {
        background-color: var(--card-background);
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        border: 1px solid #e9ecef;
        transition: transform 0.3s ease;
    }

    .detail-item:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
    }

    .detail-label {
        font-weight: 600;
        color: var(--primary-color);
        margin-bottom: 10px;
        display: block;
        text-transform: uppercase;
        font-size: 14px;
    }

    .detail-value {
        color: var(--text-color);
        font-size: 16px;
        word-break: break-word;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 25px;
        margin-top: 30px;
        padding: 20px;
        background-color: #f8f9fa;
    }

    .social-link {
        transition: all 0.3s ease;
        opacity: 0.7;
        text-decoration: none;
    }

    .social-link i {
        font-size: 40px;
        transition: all 0.3s ease;
    }

    .social-link-facebook i {
        color: #3b5998;
    }

    .social-link-twitter i {
        color: #1da1f2;
    }

    .social-link-instagram i {
        color: #c32aa3;
    }

    .social-link:hover i {
        transform: scale(1.2);
        opacity: 1;
    }

    .social-link-disabled {
        opacity: 0.3;
        cursor: not-allowed;
    }

    .action-buttons {
        display: flex;
        justify-content: center;
        gap: 20px;
        padding: 25px;
        background-color: #f1f3f5;
    }

    .btn {
        padding: 12px 25px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 1px;
        transition: all 0.3s ease;
    }

    .btn-edit {
        background-color: #28a745;
        color: white;
    }

    .btn-edit:hover {
        background-color: #218838;
        transform: translateY(-3px);
    }

    .btn-back {
        background-color: var(--secondary-color);
        color: white;
    }

    .btn-back:hover {
        background-color: #545b62;
        transform: translateY(-3px);
    }

    @@media (max-width: 768px) {
        .contact-details-container {
            margin: 10px;
            border-radius: 0;
        }

        .contact-header {
            padding: 15px;
        }

        .contact-header h2 {
            font-size: 20px;
        }
    }
</style>

<main id="main" class="main">
    <div class="contact-details-container">
        <div class="contact-header">
            <h2>
                <i class="fas fa-address-card"></i> İletişim Detayları
            </h2>
        </div>

        <div class="contact-details">
            <div class="detail-grid">
                <div class="detail-item">
                    <span class="detail-label">Adres</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Adres) ? "Belirtilmemiş" : Model.Adres)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Telefon</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Telefon) ? "Belirtilmemiş" : Model.Telefon)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Fax</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Fax) ? "Belirtilmemiş" : Model.Fax)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Whatsapp</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Whatsapp) ? "Belirtilmemiş" : Model.Whatsapp)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Facebook</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Facebook) ? "Belirtilmemiş" : Model.Facebook)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Twitter</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Twitter) ? "Belirtilmemiş" : Model.Twitter)</span>
                </div>
                <div class="detail-item">
                    <span class="detail-label">Instagram</span>
                    <span class="detail-value">@(string.IsNullOrEmpty(Model.Instagram) ? "Belirtilmemiş" : Model.Instagram)</span>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            @Html.ActionLink("Düzenle", "Edit", new { id = Model.IletisimId }, new { @class = "btn btn-edit" })
            @Html.ActionLink("Geri Dön", "Index", null, new { @class = "btn btn-back" })
        </div>
    </div>
</main>