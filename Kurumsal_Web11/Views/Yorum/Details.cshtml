@model Kurumsal_Web11.Models.Yorum

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
.yorum-detay {
    background: linear-gradient(to right bottom, #ffffff, #f8f9fa);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    padding: 35px;
    margin: 30px auto;
    max-width: 900px;
    position: relative;
    overflow: hidden;
}

.yorum-detay::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(to right, #3498db, #2ecc71);
}

.yorum-baslik {
    color: #2c3e50;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 30px;
    padding-bottom: 15px;
    border-bottom: 2px solid #e0e0e0;
    position: relative;
}

.yorum-baslik::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 100px;
    height: 2px;
    background: #3498db;
}

.detay-liste {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 20px;
    margin: 30px 0;
}

.detay-etiket {
    font-weight: 600;
    color: #34495e;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    position: relative;
    padding-left: 15px;
}

.detay-etiket::before {
    content: '';
    position: absolute;
    left: 0;
    width: 4px;
    height: 100%;
    background: #3498db;
    border-radius: 2px;
}

.detay-icerik {
    color: #555;
    background: #ffffff;
    padding: 15px 20px;
    border-radius: 8px;
    border: 1px solid #e0e0e0;
    transition: all 0.3s ease;
    font-size: 1.1rem;
}

.detay-icerik:hover {
    transform: translateX(5px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
    border-color: #3498db;
}

.geri-don-btn {
    display: inline-block;
    padding: 12px 30px;
    background: linear-gradient(to right, #3498db, #2ecc71);
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-weight: 500;
    letter-spacing: 0.5px;
    transition: all 0.3s ease;
    margin-top: 20px;
    border: none;
    box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
}

.geri-don-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
    color: white;
    background: linear-gradient(to right, #2980b9, #27ae60);
}

@@media (max-width: 768px) {
    .detay-liste {
        grid-template-columns: 1fr;
        gap: 10px;
    }

    .detay-etiket {
        padding-bottom: 5px;
    }
}
</style>
<main id="main" class="main">
    <div class="yorum-detay">
        <h2 class="yorum-baslik">Detaylar</h2>

        <div>
            <h4 class="yorum-baslik">Yorum</h4>
            <div class="detay-liste">
                <div class="detay-etiket">
                    @Html.DisplayNameFor(model => model.Blog.Baslik)
                </div>
                <div class="detay-icerik">
                    @Html.DisplayFor(model => model.Blog.Baslik)
                </div>

                <div class="detay-etiket">
                    @Html.DisplayNameFor(model => model.AdSoyad)
                </div>
                <div class="detay-icerik">
                    @Html.DisplayFor(model => model.AdSoyad)
                </div>

                <div class="detay-etiket">
                    @Html.DisplayNameFor(model => model.Eposta)
                </div>
                <div class="detay-icerik">
                    @Html.DisplayFor(model => model.Eposta)
                </div>

                <div class="detay-etiket">
                    @Html.DisplayNameFor(model => model.YorumIcerik)
                </div>
                <div class="detay-icerik">
                    @Html.DisplayFor(model => model.YorumIcerik)
                </div>

                <div class="detay-etiket">
                    @Html.DisplayNameFor(model => model.Onay)
                </div>
                <div class="detay-icerik">
                    @Html.DisplayFor(model => model.Onay)
                </div>
            </div>
        </div>
        <p>
            @Html.ActionLink("Geri Dön", "Index", null, new { @class = "geri-don-btn" })
        </p>
    </div>
</main>