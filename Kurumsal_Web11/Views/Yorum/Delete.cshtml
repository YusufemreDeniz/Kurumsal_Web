@model Kurumsal_Web11.Models.Yorum

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .silme-container {
    background: linear-gradient(to right bottom, #ffffff, #f8f9fa);
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
    padding: 35px;
    margin: 30px auto;
    max-width: 900px;
    position: relative;
}

.silme-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(to right, #e74c3c, #c0392b);
}

.silme-baslik {
    color: #2c3e50;
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 20px;
}

.uyari-mesaji {
    color: #e74c3c;
    font-size: 1.3rem;
    margin: 20px 0;
    padding: 15px;
    border-left: 4px solid #e74c3c;
    background: rgba(231, 76, 60, 0.1);
    border-radius: 0 8px 8px 0;
}

.detay-liste {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 20px;
    margin: 30px 0;
    background: #fff;
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0,0,0,0.05);
}

.detay-etiket {
    font-weight: 600;
    color: #34495e;
    font-size: 1.1rem;
    padding-left: 15px;
    border-left: 3px solid #e74c3c;
}

.detay-icerik {
    color: #555;
    font-size: 1.1rem;
    padding: 8px 15px;
    background: #f8f9fa;
    border-radius: 6px;
}

.buton-grubu {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    align-items: center;
}

.sil-btn {
    padding: 12px 30px;
    background: linear-gradient(to right, #e74c3c, #c0392b);
    color: white;
    border: none;
    border-radius: 25px;
    font-size: 1.1rem;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(231, 76, 60, 0.3);
}

.sil-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(231, 76, 60, 0.4);
}

.geri-don-link {
    padding: 12px 30px;
    background: linear-gradient(to right, #3498db, #2980b9);
    color: white;
    text-decoration: none;
    border-radius: 25px;
    font-size: 1.1rem;
    font-weight: 500;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(52, 152, 219, 0.3);
}

.geri-don-link:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(52, 152, 219, 0.4);
    color: white;
}

@@media (max-width: 768px) {
    .detay-liste {
        grid-template-columns: 1fr;
        gap: 10px;
    }

    .buton-grubu {
        flex-direction: column;
        width: 100%;
    }

    .sil-btn, .geri-don-link {
        width: 100%;
        text-align: center;
    }
}
</style>
<main id="main" class="main">
    <div class="silme-container">
        <h2 class="silme-baslik">Yorum Sil</h2>

        <div class="uyari-mesaji">
            <i class="fas fa-exclamation-triangle"></i> Silmek İstediğinize Emin Misiniz?
        </div>

        <div class="detay-liste">
            <div class="detay-etiket">
                @Html.DisplayNameFor(model => model.Blog.Baslik)
            </div>
            <div class="detay-icerik">
                @Html.DisplayFor(model => model.Blog.Baslik)
            </div>

            <div class="detay-etiket">
                @Html.DisplayNameFor(model => model.AdSoyad)
            </div>
            <div class="detay-icerik">
                @Html.DisplayFor(model => model.AdSoyad)
            </div>

            <div class="detay-etiket">
                @Html.DisplayNameFor(model => model.Eposta)
            </div>
            <div class="detay-icerik">
                @Html.DisplayFor(model => model.Eposta)
            </div>

            <div class="detay-etiket">
                @Html.DisplayNameFor(model => model.YorumIcerik)
            </div>
            <div class="detay-icerik">
                @Html.DisplayFor(model => model.YorumIcerik)
            </div>

            <div class="detay-etiket">
                @Html.DisplayNameFor(model => model.Onay)
            </div>
            <div class="detay-icerik">
                @Html.DisplayFor(model => model.Onay)
            </div>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="buton-grubu">
                <input type="submit" value="Sil" class="sil-btn" />
                @Html.ActionLink("Geri Dön", "Index", null, new { @class = "geri-don-link" })
            </div>
        }
    </div>
</main>